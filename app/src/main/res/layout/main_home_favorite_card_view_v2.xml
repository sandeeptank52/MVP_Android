<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/color_white"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="14dp">

        <ImageView
            android:id="@+id/favoriteCardViewIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/favorite_icon_image_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/favoriteCardViewTitle"
            android:layout_marginStart="40dp"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="@font/dmsans_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/favoriteCardViewValue"
            android:textSize="15sp"
            android:textColor="@color/color_black"
            android:layout_width="0dp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/dmsans_medium"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/favoriteCardViewTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/favoriteCardViewMenu"
            android:src="@drawable/favorites_img_icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:contentDescription="@string/favorite_menu_image_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/favoriteCardViewData"
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/favoriteCardViewMenu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>