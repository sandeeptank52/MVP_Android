<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.application.bmiobesity.common.NavigationId" />

        <variable
            name="vm"
            type="com.application.bmiobesity.viewModels.MainViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        tools:context=".view.mainActivity.subscriptions.SubscriptionsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:padding="15dp">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center_vertical"
                android:text="@string/name"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_personal_recommendation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/profile_hint_name"
                android:textColorHint="@color/gray_800"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidthFocused="2dp"
                app:layout_constraintEnd_toEndOf="@id/generalVertical50Guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_tv">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/generalVertical50Guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/surname_input_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:hint="@string/profile_hint_surname"
                android:textColorHint="@color/gray_800"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidthFocused="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/generalVertical50Guideline"
                app:layout_constraintTop_toTopOf="@id/name_input_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/surname_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/birth_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center_vertical"
                android:text="@string/date_of_birth"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_input_text" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileBirthDateCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/birth_date_tv"
                app:strokeColor="@color/gray_400"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/profileBirthDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/profile_hint_date_of_birth"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/arrow_icon"
                    app:drawableTint="@color/gray_800" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center_vertical"
                android:text="@string/gender"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_gender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileBirthDateCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileGenderCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gender_tv"
                app:strokeColor="@color/gray_400"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/profileGenderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/profile_hint_gender"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/arrow_icon"
                    app:drawableTint="@color/gray_800" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center_vertical"
                android:text="@string/countries"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_country"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileGenderCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileCountriesCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/country_tv"
                app:strokeColor="@color/gray_400"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/profileCountriesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/profile_hint_country"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/arrow_icon"
                    app:drawableTint="@color/gray_800" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/height_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center_vertical"
                android:text="@string/height"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileCountriesCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileHeightCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/height_tv"
                app:strokeColor="@color/gray_400"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/profileHeightTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/profile_hint_height"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/arrow_icon"
                    app:drawableTint="@color/gray_800" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/smoke_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/dmsans_medium"
                android:gravity="center_vertical"
                android:text="@string/smoker"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_smoke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileHeightCardView" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileSmokeCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/smoke_tv"
                app:strokeColor="@color/gray_400"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/profileSmokeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:gravity="center_vertical"
                    android:hint="@string/profile_smoker_title"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/arrow_icon"
                    app:drawableTint="@color/gray_800" />

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profileFirstTimeButton"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/common_button_pressed"
                android:fontFamily="@font/dmsans_medium"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileSmokeCardView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>

