<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".view.mainActivity.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">


        <TextView
            android:id="@+id/personal_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:fontFamily="@font/pt_sans_bold"
            android:padding="16dp"
            android:gravity="center"
            android:text="@string/personal_info"
            android:textColor="@color/card_title_text"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/profile_hint_name"
            app:boxBackgroundColor="@color/color_white"
            android:textColorHint="@color/color_black"
            app:boxStrokeColor="@color/color_black"
            app:boxStrokeErrorColor="@color/red_900"
            app:endIconTint="@color/color_black"
            app:layout_constraintEnd_toStartOf="@+id/surname_input_text"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personal_info_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/color_black"
                android:ems="10"
                android:focusable="true"
                android:gravity="start|top"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/surname_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/profile_hint_surname"
            app:boxBackgroundColor="@color/color_white"
            android:textColorHint="@color/color_black"
            app:boxStrokeColor="@color/color_black"
            app:boxStrokeErrorColor="@color/red_900"
            app:endIconTint="@color/color_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_input_text"
            app:layout_constraintTop_toBottomOf="@id/personal_info_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/surname_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textColor="@color/color_black"
                android:ems="10"
                android:focusable="true"
                android:gravity="start|top"
                android:inputType="textPersonName"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/profileLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/gray_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surname_input_text">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileBirthDateConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_constraint_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="3dp"
                android:paddingHorizontal="16dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profileBirthGuideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/birth_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/profileBirthDateTextView"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="16dp"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/profileBirthGuideline"/>

                <ImageView
                    android:id="@+id/birthDateArrow"
                    android:src="@drawable/arrow_icon"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:contentDescription="@string/profile_arrow_icon_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileGenderConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_constraint_selector"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="3dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profileGenderGuideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/gender_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/gender"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/profileGenderTextView"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/profileGenderGuideline"/>

                <ImageView
                    android:id="@+id/GenderArrow"
                    android:src="@drawable/arrow_icon"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:contentDescription="@string/profile_arrow_icon_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileHeightConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_constraint_selector"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="3dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profileHeightGuideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/height_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/height"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/profileHeightTextView"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/profileHeightGuideline"/>

                <ImageView
                    android:id="@+id/HeightArrow"
                    android:src="@drawable/arrow_icon"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:contentDescription="@string/profile_arrow_icon_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileSmokerConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_constraint_selector"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="3dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profileSmokerGuideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/smoke_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/smoker"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/profileSmokeTextView"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/profileSmokerGuideline"/>

                <ImageView
                    android:id="@+id/SmokerArrow"
                    android:src="@drawable/arrow_icon"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:contentDescription="@string/profile_arrow_icon_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileCountriesConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_constraint_selector"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="16dp"
                android:layout_marginVertical="3dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/profileCountriesGuideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/country_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/countries"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/profileCountriesTextView"
                    android:textSize="16sp"
                    android:textColor="@color/color_black"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/profileCountriesGuideline"
                    app:layout_constraintEnd_toStartOf="@id/CountriesArrow"/>

                <ImageView
                    android:id="@+id/CountriesArrow"
                    android:src="@drawable/arrow_icon"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:contentDescription="@string/profile_arrow_icon_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/profileFirstTimeInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/red_900"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileLinearLayout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profileFirstTimeButton"
            android:text="@string/button_next"
            android:enabled="false"
            android:visibility="gone"
            android:textColor="@color/color_white"
            android:background="@drawable/common_button_selector"
            android:layout_marginTop="16dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileFirstTimeInfo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>