<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".view.mainActivity.medcard.MedcardFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainMedCardRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/medCardButtonDone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/medCardButtonDone"
        android:text="@string/button_done"
        android:visibility="gone"
        android:enabled="false"
        android:textColor="@color/color_white"
        android:background="@drawable/common_button_selector"
        android:layout_marginVertical="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainMedCardRecycler"/>

</androidx.constraintlayout.widget.ConstraintLayout>
