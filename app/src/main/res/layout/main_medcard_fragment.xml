<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".view.mainActivity.medcard.MedcardFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainMedCardRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/mainMedCardDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/mainMedCardDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="15dp"
        android:background="@color/gray_100"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/medCardButtonDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/medCardButtonDone"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_margin="15dp"
        android:background="@drawable/common_button_pressed"
        android:enabled="false"
        android:fontFamily="@font/dmsans_medium"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/button_done"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
