<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/medCardItemCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/color_white"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="7dp"
    android:stateListAnimator="@animator/medcard_cardview_animator"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/medCardItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/medCardItemSourceType"/>

        <TextView
            android:id="@+id/medCardItemValue"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:layout_marginVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemTitle" />

        <TextView
            android:id="@+id/medCardItemUnit"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/medCardItemValue"
            app:layout_constraintTop_toBottomOf="@id/medCardItemTitle"/>

        <TextView
            android:id="@+id/medCardItemSourceType"
            android:text="@string/medcard_card_item_source_type"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/medCardItemSourceTypeValue"/>

        <TextView
            android:id="@+id/medCardItemSourceTypeValue"
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/medCardItemDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/gray_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemValue"/>

        <TextView
            android:id="@+id/medCardItemMeasurementFrequency"
            android:text="@string/medcard_card_item_measur_freq"
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemDivider" />

        <TextView
            android:id="@+id/medCardItemMeasurementFrequencyValue"
            android:layout_width="0dp"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/medCardItemMeasurementFrequency"
            app:layout_constraintTop_toBottomOf="@id/medCardItemDivider"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/medCardItemDivider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/gray_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemMeasurementFrequencyValue"/>

        <TextView
            android:id="@+id/medCardItemLastTime"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemDivider1"/>

        <TextView
            android:id="@+id/medCardItemLastDate"
            android:textSize="12sp"
            android:textColor="@color/gray_400"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemDivider1"
            app:layout_constraintEnd_toStartOf="@id/medCardItemLastTime"/>

        <TextView
            android:id="@+id/medCardItemLastUpdate"
            android:text="@string/medcard_card_item_last_update"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medCardItemDivider1"
            app:layout_constraintEnd_toStartOf="@id/medCardItemLastDate"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>