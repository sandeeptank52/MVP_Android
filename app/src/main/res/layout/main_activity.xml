<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".view.mainActivity.MainActivity">

    <FrameLayout
        android:id="@+id/mainFrameLayoutWaiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:elevation="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/mainFrameLayoutTitle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/label_gradient_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/mainMenu"
        android:src="@drawable/main_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/image_description"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/mainFrameLayoutTitle"
        app:layout_constraintBottom_toBottomOf="@id/mainFrameLayoutTitle"
        app:layout_constraintEnd_toEndOf="@id/mainFrameLayoutTitle"/>

    <ImageView
        android:id="@+id/mainImageViewAvatarIcon"
        android:src="@drawable/avatar_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/image_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainFrameLayoutTitle"
        app:layout_constraintBottom_toBottomOf="@id/mainFrameLayoutTitle"/>

    <TextView
        android:id="@+id/mainTextViewFirstName"
        android:layout_marginHorizontal="8dp"
        android:textSize="20sp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mainImageViewAvatarIcon"
        app:layout_constraintTop_toTopOf="@id/mainFrameLayoutTitle"
        app:layout_constraintBottom_toBottomOf="@id/mainFrameLayoutTitle"/>

    <TextView
        android:id="@+id/mainTextViewLastName"
        android:layout_marginHorizontal="8dp"
        android:textSize="20sp"
        android:textColor="@color/color_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/mainTextViewFirstName"
        app:layout_constraintTop_toTopOf="@id/mainFrameLayoutTitle"
        app:layout_constraintBottom_toBottomOf="@id/mainFrameLayoutTitle"/>

    <TextView
        android:id="@+id/mainTextViewSubsInfo"
        android:layout_width="0dp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/mainImageViewAvatarIcon"
        app:layout_constraintEnd_toEndOf="@id/mainFrameLayoutTitle"
        app:layout_constraintBottom_toBottomOf="@id/mainFrameLayoutTitle"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainNavHostFragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        app:navGraph="@navigation/main_nav"

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainFrameLayoutTitle"
        app:layout_constraintBottom_toTopOf="@id/mainBottomNavigationView"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainBottomNavigationView"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        app:itemTextColor="@color/color_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_bottom_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>