<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/gray_91"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/favoriteCardViewInfoView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/favoriteCardViewIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/favorite_icon_image_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/favoriteCardViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/dmsans_medium"
                android:lineSpacingExtra="0dp"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textFontWeight="500"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/favoriteCardViewValue"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/favoriteCardViewIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/favoriteCardViewValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:textFontWeight="500"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/favoriteCardViewTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/favoriteCardViewTitle"
                app:layout_constraintTop_toTopOf="@id/favoriteCardViewTitle" />

            <ImageView
                android:id="@+id/favoriteCardViewMenu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/favorite_menu_image_description"
                android:src="@drawable/ic_round_arrow_forward_ios_blue"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/favoriteCardViewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/favoriteCardViewMenu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/favoriteCardViewDetailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_91"
            android:padding="14dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favoriteCardViewInfoView">

            <TextView
                android:id="@+id/favoriteCardViewDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>