<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/medCardListDialogTitle"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/medCardListDialogSpinnerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medCardListDialogTitle"/>

    <TextView
        android:id="@+id/medCardListDialogDescription"
        android:layout_width="0dp"
        android:textColor="@color/color_black"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medCardListDialogSpinnerValue"/>

    <View
        android:id="@+id/medCardListDialogDivider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_100"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medCardListDialogDescription"/>

    <TextView
        android:id="@+id/medCardListDialogEnterSourceType"
        android:text="@string/medcard_dialog_source_type"
        android:textColor="@color/color_black"
        android:layout_width="0dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/medCardListDialogSpinnerSourceType"
        app:layout_constraintTop_toBottomOf="@id/medCardListDialogDivider1"
        app:layout_constraintBottom_toTopOf="@id/medCardListDialogDivider2"/>

    <Spinner
        android:id="@+id/medCardListDialogSpinnerSourceType"
        android:layout_width="0dp"
        style="@style/testSpinner"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/medCardListDialogEnterSourceType"
        app:layout_constraintTop_toBottomOf="@id/medCardListDialogDivider1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/medCardListDialogDivider2"/>

    <View
        android:id="@+id/medCardListDialogDivider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_100"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medCardListDialogSpinnerSourceType" />

</androidx.constraintlayout.widget.ConstraintLayout>