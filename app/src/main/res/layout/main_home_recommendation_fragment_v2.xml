<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.application.bmiobesity.common.NavigationId" />

        <variable
            name="vm"
            type="com.application.bmiobesity.viewModels.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        tools:context=".view.mainActivity.home.recommendation.HomeRecommendationFragment">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/recomSubsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="recomSubsInfoContainer" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/recommendationDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/recomPersonalGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="recomTextViewTitlePersonal, recommendationsPersonalContentHolder" />

                <TextView
                    android:id="@+id/recomTextViewTitleCommon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/recom_title_common"
                    android:textColor="@color/color_black"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/ic_common_recommendation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/recommendationCommonContentHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recomTextViewTitleCommon">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendationsCommonRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <TextView
                        android:id="@+id/recommendationCommonErrorPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="30dp"
                        android:fontFamily="@font/dmsans_medium"
                        android:text="@string/error_data_not_available"
                        android:textAlignment="center"
                        android:textColor="@color/red_900"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/recomTextViewTitlePersonal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="@string/recom_title_personal"
                    android:textColor="@color/color_black"
                    android:textSize="18sp"
                    app:drawableStartCompat="@drawable/ic_personal_recommendation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recommendationCommonContentHolder" />

                <LinearLayout
                    android:id="@+id/recommendationsPersonalContentHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recomTextViewTitlePersonal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendationsPersonalRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <TextView
                        android:id="@+id/recommendationPersonalErrorPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="30dp"
                        android:fontFamily="@font/dmsans_medium"
                        android:text="@string/error_data_not_available"
                        android:textAlignment="center"
                        android:textColor="@color/red_900"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/recommendationDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recomSubsInfoContainer"/>

        <LinearLayout
            android:id="@+id/recomSubsInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recomPersonalStoreButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/yellow_gradient"
                android:padding="15dp">

                <TextView
                    android:id="@+id/recomSubsInfoTextViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="@string/personal_recomendations"
                    android:textColor="@color/color_white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/recomSubsInfoImageViewStar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="@string/monthly_subscriptions"
                    android:textColor="@color/gray_100"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/recomSubsInfoImageViewStar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recomSubsInfoTextViewTitle" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/recomSubsInfoImageViewStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_round_star_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:text="@string/consult_a_specialist"
                android:textAlignment="center" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>