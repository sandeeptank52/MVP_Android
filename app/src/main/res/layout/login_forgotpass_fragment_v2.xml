<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".view.loginActivity.forgotPass.ForgotPassFragment">

    <TextView
        android:id="@+id/forgotPassTextViewTitle"
        android:text="@string/forgot_pass_title"
        android:textSize="22sp"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:fontFamily="@font/dmsans_bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standart_margin_top_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/forgotPassTextViewInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/standart_margin_top_logo"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/forgot_pass_text"
        android:textSize="16sp"
        android:textColor="@color/gray_800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassTextViewTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgotPassTextInputLayoutMail"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="@dimen/standart_margin_top_logo"
        android:layout_marginEnd="40dp"
        android:background="@color/transparent"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/warn"
        app:errorIconTint="@color/gray_800"
        app:boxStrokeColor="@color/transparent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassTextViewInfoText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgotPassTextInputEditTextMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_round_gray"
            android:focusable="true"
            android:fontFamily="@font/dmsans_regular"
            android:hint="@string/login_hint_email"
            android:inputType="textEmailAddress"
            android:paddingStart="60dp"
            android:textColor="@color/color_black"
            tools:ignore="RtlSymmetry" />

    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/emailicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/image_description"
        android:background="@drawable/all_round_blue"
        app:layout_constraintBottom_toBottomOf="@+id/forgotPassTextInputLayoutMail"
        app:layout_constraintStart_toStartOf="@+id/forgotPassTextInputLayoutMail"
        app:layout_constraintTop_toTopOf="@+id/forgotPassTextInputLayoutMail" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="13dp"
        android:background="@drawable/mailicon"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toBottomOf="@+id/emailicon"
        app:layout_constraintEnd_toEndOf="@+id/emailicon"
        app:layout_constraintStart_toStartOf="@+id/emailicon"
        app:layout_constraintTop_toTopOf="@+id/emailicon" />

    <ProgressBar
        android:id="@+id/forgotPassProgressBar"
        android:layout_width="@dimen/standart_width_field_logo"
        android:layout_marginTop="@dimen/standart_margin_top_logo"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassTextInputLayoutMail"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:contentDescription="@string/image_description"
        android:layout_height="wrap_content"
        android:background="@drawable/downorit"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgotPassButtonSend"
        android:text="@string/confirm"
        android:enabled="false"
        android:background="@drawable/all_round_white"
        android:textColor="@color/color_black"
        android:layout_width="150dp"
        android:textSize="18sp"
        android:fontFamily="@font/dmsans_medium"
        android:textAllCaps="false"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>