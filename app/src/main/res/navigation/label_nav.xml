<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/label_nav_graph"
    app:startDestination="@id/labelMainNav">

    <fragment
        android:id="@+id/labelMainNav"
        android:name="com.application.bmiobesity.view.labelActivity.main.MainFragment"
        tools:layout="@layout/label_main_fragment">
        <action
            android:id="@+id/mainToWelcome"
            app:destination="@id/labelWelcomeNav"
            app:launchSingleTop="true"
            app:popUpTo="@id/label_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/labelWelcomeNav"
        android:name="com.application.bmiobesity.view.labelActivity.welcome.WelcomeFragment"
        tools:layout="@layout/label_welcome_text_fragment" />

</navigation>