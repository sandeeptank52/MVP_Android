<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.bmiobesity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".InTimeApp"
        android:allowBackup="false"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="false"
        android:theme="@style/Theme.DiseaseTrackerProduction">

        <activity
            android:name=".view.labelActivity.LabelActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.loginActivity.LoginActivity"
            android:screenOrientation="portrait">
            <nav-graph android:value="@navigation/login_nav"/>
        </activity>
        <activity
            android:name=".view.mainActivity.MainActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>